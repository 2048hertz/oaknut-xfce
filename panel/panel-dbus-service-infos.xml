<node name="/org/xfce/Panel">
  <!--
    org.xfce.PanelPlugin

    This interface allows external applications to commumicate
    with the panel.
  -->
  <interface name="org.xfce.Panel">
    <annotation name="org.freedesktop.DBus.GLib.CSymbol"
                value="panel_dbus_service"/>
    <annotation name="org.freedesktop.DBus.GLib.ClientCSymbol"
                value="_panel_dbus_client"/>

    <!--
      DisplayPreferencesDialog (active : UINT, socket-id : INT) : VOID

      active    : The active panel number in the dialog, starting
                  at zero.
      socket-id : Instead of openening the dialog in a new windows, use
                  a socket to embed the dialog content in a remote
                  window, used for the Xfce settings manager dialog.
    -->
    <method name="DisplayPreferencesDialog">
      <arg name="active" direction="in" type="u" />
    </method>

    <!--
      DisplayItemsDialog (active : UINT) : VOID

      active  : The active panel number in the dialog, starting
                at zero.
    -->
    <method name="DisplayItemsDialog">
      <arg name="active" direction="in" type="u" />
    </method>

    <!--
      Save () : VOID

      Tells the panel to save its configuration, including all the plugins.
    -->
    <method name="Save" />

    <!--
      AddNewItem (name : STRING, args : ARRAY OF STRING) : VOID

      plugin_name : The internal name of the plugin the user wants to add.
      arguments   : Optional arguments send with the command line. This
                    could be filenames or anything else in an array of
                    strings.
    -->
    <method name="AddNewItem">
      <arg name="plugin_name" direction="in" type="s" />
      <arg name="arguments" direction="in" type="as" />
    </method>

    <!--
      Terminate (restart : BOOL) : VOID

      restart : Whether the panel should restart after termination.
    -->
    <method name="Terminate">
      <arg name="restart" direction="in" type="b" />
    </method>
  </interface>

  <!--
    org.xfce.PanelPlugin

    The panel plugin specific interface, used for communication
    between the panel and the wrapper. This interface should not
    be implemented by any other application.

    This interface is also subject to change. So, unless you know
    what you are doing, don't use it.
  -->
  <interface name="org.xfce.PanelPlugin">
    <annotation name="org.freedesktop.DBus.GLib.CSymbol"
                value="panel_dbus_service_plugin" />
    <annotation name="org.freedesktop.DBus.GLib.ClientCSymbol"
                value="wrapper_dbus_client" />

    <!--
      Emitted when a panel property changed, monitored by the wrapper. This
      is emitted to all plugins but they will filter out their property
      based on the @plugin-id. The @property is an enum from DBusPropertyChanged,
      see common/panel-dbus.h.

      Panel -> Wrapper -> XfcePanelPluginProvider
    -->
    <signal name="PropertyChanged">
      <arg name="plugin_id" type="i" />
      <arg name="property" type="i" />
      <arg name="value" type="v" />
    </signal>

    <!--
      This method is called from the wrapper and notifies the panel about an
      action that should be performed. the @signal is an enum from
      XfcePanelPluginProviderSignal, see libxfce4panel/xfce-panel-plugin-provider.h.

      XfcePanelPluginProvider -> Wrapper -> Panel
    -->
    <method name="ProviderSignal">
      <arg name="plugin_id" direction="in" type="i" />
      <arg name="signal" direction="in" type="i" />
    </method>
  </interface>
</node>
